<div class="container  d-flex flex-column justify-content-center mt-2">
  <div class="col-12 d-flex justify-content-start">

    <div>
      <h1 class="mt-3">{{rider.name}} <img src="{{rider.flag}}" class="card-flag" alt="{{rider.name}}" width="35px"
          height="25px" /></h1>
      <img src="{{rider.image}}" class="img-thumbnail" alt="{{rider.name}}" width="450" />
    </div>
    <div class="ms-5 mt-5 justify-content-center">
      <p> <b>From</b>: {{rider.nationality}} </p>

      {{#if rider.bike}}
      <p> <b>Bike:</b> {{rider.bike}} </p>
      <p> <b>Date Of Birth:</b> {{rider.dateOfBirth}} </p>
      {{else}}
      <p> <b>Date Of Birth:</b> {{rider.dateOfBirth}} </p>
      {{/if}}

      <p> <b>Place Of Birth:</b> {{rider.placeOfBirth}} </p>
      <p> <b>Races:</b> {{rider.races}} </p>
    </div>
    <div class="ms-5 mt-5">
      {{#if rider.height}}
      <p> <b>Height:</b> {{rider.height}} </p>
      <p> <b>World Championship:</b> {{rider.worldChampionship}} </p>
      {{else}}
      <p> <b>World Championship:</b> {{rider.worldChampionship}} </p>
      {{/if}}

      <p> <b>Victories:</b> {{rider.victories}} </p>
      <p> <b>Podiums:</b> {{rider.podiums}} </p>
      <p> <b>Poles:</b> {{rider.poles}} </p>

    </div>

  </div>
  <p class="mt-4"> <b>Story:</b> {{rider.story}} </p>
  {{#if rider.merchandising}}
  <p> <button href="{{rider.merchandising}}">Merchandising</button></p>
  {{/if}}

  <button class="custom-btn" width="100" onclick="window.location.href='/riders/{{rider._id}}/gallery'">Gallery</button>

  <div>
    <a class="btn btn-success" href="/riders/{{rider._id}}/update" style="width: fit-content;"><i
        data-feather="edit"></i></a>
    <a class="btn btn-danger" href="/riders/{{rider._id}}/delete" style="width: fit-content;"><i
        data-feather="trash-2"></i></a>
    <a class="btn btn-secondary" href="/riders" style="width: fit-content;"><i data-feather="rider"></i></a>
  </div>
  <hr>
  <div class="col-12">
    <h2>Comments</h2>
    {{#each rider.comments}}
    <div class="card my-2">
      <div class="card-body">
        <p class="card-text">{{this.content}}</p>
      </div>
      <div class="card-footer d-flex justify-content-between">
        <small class="text-body-secondary">Post by {{this.user.username}}</small>
        <a class="btn btn-danger" href="/comments/{{this._id}}/delete" style="width: fit-content;"><i
            data-feather="trash-2" width="16" style="color: red;"></i></a>
      </div>

    </div>
    {{/each}}
    <form action="/comments/{{rider._id}}/create" method="POST">
      <div class="mb-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea class="form-control" name="content" id="comment" rows="3" required></textarea>
      </div>
      <button type="submit" class="btn btn-success">Comment</button>
    </form>

  </div>