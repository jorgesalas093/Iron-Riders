<form class="container-sm mx-auto" style="max-width: 400px;" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="username" style="color: #3498db;" class="form-label">Username</label>
        <input {{#if user}}value="{{currentUser.username}}" {{else}}placeholder="Type username" required{{/if}}
            type="text" name="username" class="{{#if errors}}is-invalid{{/if}} form-control" id="username"
            aria-describedby="usernameHelp">
    </div>
    <div class="mb-3">
        <label for="email" style="color: #3498db;" class="form-label">Email</label>
        <input {{#if user}}value="{{currentUser.email}}" {{else}}placeholder="Type email" required{{/if}} type="email"
            name="email" class="{{#if errors}}is-invalid{{/if}} form-control" id="email" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
        <label for="password" style="color: #3498db;" class="form-label">Password</label>
        <input placeholder="Type password" type="password" name="password"
            class="{{#if errors}}is-invalid{{/if}} form-control" id="password">
    </div>
    <div class="mb-3">
        <label for="picture" style="color: #3498db;" class="form-label">Profile Picture</label>
        <input placeholder="Upload a profile picture" type="file" name="picture"
            class="{{#if errors}}is-invalid{{/if}} form-control" id="picture">
    </div>
    <button href="/profile/edit" type="submit" class="btn btn-primary">Submit</button>
</form>